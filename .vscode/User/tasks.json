{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start App",
      "type": "shell",
      "command": "npm start",            
    },
    {
      "label": "Launch Chrome",
      "type": "process",
      "command": "google-chrome",
      "args": [
        "http://localhost:3000",
        "--remote-debugging-port=9222",
        "--user-data-dir=/tmp/chrome-debug"
      ],      
    }
  ]
}
